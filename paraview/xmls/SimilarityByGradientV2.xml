<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="SimilarityByGradientV2" class="ttkSimilarityByGradientV2" label="TTK SimilarityByGradientV2">
      <Documentation long_help="SimilarityByGradientV2" short_help="SimilarityByGradientV2">
        TODO
      </Documentation>

      <InputProperty name="Domain" port_index="0" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <Documentation>Domain of the gradient.</Documentation>
      </InputProperty>

      <OutputPort index="0" id="port0" name="Matrix" />

      <InputProperty name="Seeds" port_index="1" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <Documentation>Seed points for the gradient-based matching.</Documentation>
      </InputProperty>

      <StringVectorProperty name="Scalars" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="0">
        <ArrayListDomain attribute_type="Scalars" name="array_list">
          <RequiredProperties>
            <Property function="Input" name="Domain" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Scalar array that will be used for the gradient computation.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty name="FeatureIds" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="1">
        <ArrayListDomain name="array_list" input_domain_name="input_arrays">
          <RequiredProperties>
            <Property function="Input" name="Seeds" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Feature Ids.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty name="Manifold" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="2">
        <ArrayListDomain name="array_list" input_domain_name="input_arrays">
          <RequiredProperties>
            <Property function="Input" name="Domain" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Array with either the ascending/descending manifold depending on whether the seeds are minima/maxima. These arrays can be generated by running TTK PathCompression before the tracking in the pipeline.</Documentation>
      </StringVectorProperty>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Time-Varying Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>