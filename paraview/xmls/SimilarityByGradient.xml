<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="SimilarityByGradient" class="ttkSimilarityByGradient" label="TTK SimilarityByGradient">
      <Documentation long_help="SimilarityByGradient" short_help="SimilarityByGradient">
        TODO
      </Documentation>

      <InputProperty name="Domain" port_index="0" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <Documentation>Domain of the gradient.</Documentation>
      </InputProperty>

      <OutputPort index="0" id="port0" name="Matrix" />

      <InputProperty name="Seeds" port_index="1" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <Documentation>Seed points for the gradient-based matching.</Documentation>
      </InputProperty>

      <StringVectorProperty name="Scalars" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="0">
        <ArrayListDomain attribute_type="Scalars" name="array_list">
          <RequiredProperties>
            <Property function="Input" name="Domain" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Scalar array that will be used for the gradient computation.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty name="FeatureIds" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="1">
        <ArrayListDomain name="array_list" input_domain_name="input_arrays">
          <RequiredProperties>
            <Property function="Input" name="Seeds" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Feature Ids.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty name="Manifold" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="2">
        <ArrayListDomain name="array_list" input_domain_name="input_arrays">
          <RequiredProperties>
            <Property function="Input" name="Domain" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Array with either the ascending/descending manifold depending on whether the seeds are minima/maxima. These arrays can be generated by running TTK PathCompression before the tracking in the pipeline.</Documentation>
      </StringVectorProperty>

      <IntVectorProperty 
          name="UseNeighbourhood" 
          command="SetUseNeighbourhood" 
          number_of_elements="1" 
          default_values="0">
          <BooleanDomain name="bool"/>
          <Documentation>Used to define whether vertex neighbours should be used when determining the match.</Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="NeighbourhoodSize" command="SetNeighbourhoodSize" default_values="0" number_of_elements="1">
        <Documentation>Size of the combinatorial? neighbourhood.</Documentation>
            <Hints>
                <PropertyWidgetDecorator type="GenericDecorator"
                mode="visibility"
                property="UseNeighbourhood"
                value="1" />
            </Hints>
        </IntVectorProperty>

      <DoubleVectorProperty  name="NeighbourhoodDistance" command="SetNeighbourhoodDistance" default_values="0" number_of_elements="1">
        <Documentation>Size of the distance neighbourhood.</Documentation>
            <Hints>
                <PropertyWidgetDecorator type="GenericDecorator"
                mode="visibility"
                property="UseNeighbourhood"
                value="1" />
            </Hints>
        </DoubleVectorProperty >

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="Scalars" />
        <Property name="FeatureIds"/>
        <Property name="Manifold"/>
      </PropertyGroup>

      <!-- Create a UI group that contains all output parameter widgets -->
        <PropertyGroup panel_widget="Line" label="Output options">
            <Property name="UseNeighbourhood" />
            <Property name="NeighbourhoodSize" />
            <Property name="NeighbourhoodDistance" />
        </PropertyGroup>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Time-Varying Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>