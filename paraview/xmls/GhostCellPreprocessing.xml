<?xml version="1.0" encoding="UTF-8"?>

<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="ttkGhostCellPreprocessing"
                 class="ttkGhostCellPreprocessing"
                 label="TTK GhostCellPreprocessing">
      <Documentation
          long_help="Ghostcell Preprocessing"
          short_help="Ghostcell Preprocessing">
        This filter prepocesses a vtkDataSet for ghostcells by adding the rankid of the rank to which it belongs. 
        All other ranks only get it as ghostcell. 
      </Documentation>

      <InputProperty name="Input" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
        </DataTypeDomain>
        <InputArrayDomain name="input_array"
                          attribute_type="point"
                          number_of_components="1" />
        <Documentation>
          A vtkDataSet that has at least one point data scalar array and globalids.
        </Documentation>
      </InputProperty>

      

      ${DEBUG_WIDGETS}



      <Hints>
        <ShowInMenu category="TTK - Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
